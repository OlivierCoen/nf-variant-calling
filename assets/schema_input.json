{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/OlivierCoen/nf-variant-calling/main/assets/schema_input.json",
    "title": "OlivierCoen/nf-variant-calling pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["id"]
            },
            "population": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Population name must be provided and cannot contain spaces",
                "meta": ["population"]
            },
            "phenotype": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Phenotype name must be provided and cannot contain spaces",
                "meta": ["phenotype"]
            },
            "lane": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Lane name cannot contain spaces",
                "meta": ["lane"]
            },
            "fastq_1": {
                "type": "string",
                "pattern": "^\\S+\\.f(ast)?q\\.gz$",
                "format": "file-path",
                "errorMessage": "FastQ file for reads 1 must be provided, cannot contain spaces and must have extension '.fq.gz' or '.fastq.gz'"
            },
            "fastq_2": {
                "errorMessage": "FastQ file for reads 2 cannot contain spaces and must have extension '.fq.gz' or '.fastq.gz'",
                "anyOf": [
                    {
                        "type": "string",
                        "pattern": "^\\S+\\.f(ast)?q\\.gz$",
                        "format": "file-path"
                    },
                    {
                        "type": "string",
                        "maxLength": 0
                    }
                ]
            }
        },
        "required": ["sample", "population", "phenotype", "lane", "fastq_1"]
    }
}
