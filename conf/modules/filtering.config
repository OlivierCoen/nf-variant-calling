process {

    withName: BASE_FILTERING {
        ext.prefix = { "${meta.id}.base_filtered" }
        ext.args   = { [
            "-m 2",
            "-M 2",
            "--min-af 0.1",
            "--max-af 0.9",
            "-i 'INFO/DP >= 30 && QUAL > 30'"
            ].join(" ").trim()
        }
    }

}
